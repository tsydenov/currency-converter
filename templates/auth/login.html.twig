{% extends 'base.html.twig' %}

{% block title %}Sign in
{% endblock %}

{% block body %}
	{% if error %}
		<h2>{{ error.messageKey }}</h2>
	{% endif %}
	<div class="centered-div">
		<form method="post">
			<label for="username">Username:</label><br>
			<input type="text" id="inputUsername" name="username" required><br><br>
			<label for="password">Password:</label><br>
			<input type="password" id="inputPassword" name="password" required><br><br>
			<button type="submit">Sign in</button>
		</form>
		Doesn't have an account? <a href="{{ path('app_signup') }}">Sign Up</a>
	</div>
{% endblock %}
